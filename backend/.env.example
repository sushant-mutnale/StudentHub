# ==================================
# StudentHub Backend - Environment Variables
# ==================================
# Copy this file to .env and fill in your values

# ===== DATABASE =====
# Local: mongodb://localhost:27017/
# Production: Get from MongoDB Atlas (mongodb+srv://...)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=student_hub

# ===== AUTHENTICATION =====
# IMPORTANT: Change this in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=MySuperSecretKey_StudentHub123456789
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== FRONTEND =====
# Local: http://localhost:5173
# Production: https://your-app.vercel.app
FRONTEND_ORIGIN=http://localhost:5173
FRONTEND_BASE_URL=http://localhost:5173

# ===== ENVIRONMENT =====
# development | production
APP_ENV=development

# ===== EMAIL (SendGrid) =====
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=your_verified_email@domain.com

# ===== PASSWORD RESET =====
PASSWORD_RESET_TOKEN_EXPIRES_MINUTES=60
PASSWORD_MIN_LENGTH=8

# ===== AI SERVICES =====
# Google AI (Gemini) - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Optional) - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== REDIS (Optional - for caching/rate limiting) =====
# Local: redis://localhost:6379
# Production: Get from Upstash or Redis Cloud
REDIS_URL=redis://localhost:6379

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AI=10/minute
RATE_LIMIT_AUTH=5/minute
